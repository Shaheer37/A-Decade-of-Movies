<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_marginHorizontal="@dimen/movie_item_padding_horizontal"
    tools:layout_marginVertical="@dimen/movie_item_padding_vertical"
    app:cardCornerRadius="@dimen/movie_card_corner_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/movie_card_padding">
        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            tools:text="Tenet" />
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_movie_title"
            style="@style/RatingBar"
            tools:rating="3.5"
            android:numStars="5"
            android:isIndicator="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>