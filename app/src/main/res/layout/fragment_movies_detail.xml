<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.moviedetail.MoviesDetailFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:elevation="@dimen/toolbar_elevation"
        style="@style/ActionBar"
        app:title="@string/app_name"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/movies_detail_title_text_size"
        android:textColor="@color/colorMovieDetailsText"
        android:gravity="start|center_vertical"
        android:layout_marginTop="@dimen/movies_detail_margin_vertical"
        android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
        android:layout_marginBottom="@dimen/movies_detail_margin_vertical"
        style="@style/RatingBar"
        tools:rating="3.5"
        android:numStars="5"
        android:isIndicator="true"/>

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genre"
        android:textStyle="bold"
        android:textSize="@dimen/movies_detail_text_size"
        android:textColor="@color/colorMovieDetailsText"
        android:gravity="start|center_vertical"
        android:layout_marginTop="@dimen/movies_detail_margin_vertical"
        android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_cast">

    </com.google.android.material.chip.ChipGroup>
    <TextView
        android:id="@+id/tv_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cast"
        android:textStyle="bold"
        android:textSize="@dimen/movies_detail_text_size"
        android:textColor="@color/colorMovieDetailsText"
        android:gravity="start|center_vertical"
        android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_group_genre" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
        android:layout_marginBottom="@dimen/movies_detail_margin_vertical"
        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rv_photos">

    </com.google.android.material.chip.ChipGroup>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_photos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/chip_group_cast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/row_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>