<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moviedetail.MoviesDetailFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        style="@style/AppBarLayout"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            android:elevation="@dimen/toolbar_elevation"
            app:navigationIcon="@drawable/ic_arrow_back"
            style="@style/ActionBar"
            app:title="@string/app_name"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:textStyle="bold"
            android:textSize="@dimen/movies_detail_title_text_size"
            android:textColor="@color/colorMovieDetailsText"
            android:gravity="start|center_vertical"
            android:layout_marginTop="@dimen/movies_detail_margin_vertical"
            android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
            android:layout_marginBottom="@dimen/movies_detail_margin_vertical"
            style="@style/RatingBar"
            tools:rating="3.5"
            android:numStars="5"
            android:isIndicator="true"/>

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:text="@string/genre"
            android:textStyle="bold"
            android:textSize="@dimen/movies_detail_text_size"
            android:textColor="@color/colorMovieDetailsText"
            android:gravity="start|center_vertical"
            android:layout_marginTop="@dimen/movies_detail_margin_vertical"
            android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal">

        </com.google.android.material.chip.ChipGroup>
        <TextView
            android:id="@+id/tv_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:text="@string/cast"
            android:textStyle="bold"
            android:textSize="@dimen/movies_detail_text_size"
            android:textColor="@color/colorMovieDetailsText"
            android:gravity="start|center_vertical"
            android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_marginHorizontal="@dimen/movies_detail_margin_horizontal"
            android:layout_marginBottom="@dimen/movies_detail_margin_vertical">

        </com.google.android.material.chip.ChipGroup>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRv"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/row_photo" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>